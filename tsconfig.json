{
  "compilerOptions": {
    "target": "ES2024",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "examples/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
